CREATE table hits (
    id INTEGER PRIMARY KEY AUTOINCREMENT,
    singer_id INTEGER,
    best_seller TEXT,
    number_one_hits INTEGER);
    
INSERT INTO hits(singer_id, best_seller, number_one_hits) VALUES (1, "Rain On Me", 6);
